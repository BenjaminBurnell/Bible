    {
      "verse": "#",
      "text": " the fig tree languishes."
    },
    {
      "verse": "#",
      "text": "and gladness dries up"
    },
    {
      "verse": "13",
      "text": " Put on sackcloth and lament, O priests;"
    },
    {
      "verse": "#",
      "text": " wail, O ministers of the altar."
    },
    {
      "verse": "#",
      "text": "Go in, pass the night in sackcloth,"
    },
    {
      "verse": "#",
      "text": " O ministers of my God!"
    },
    {
      "verse": "#",
      "text": " Because grain offering and drink offering"
