    },
    {
      "verse": "#",
      "text": " the hopping locust has eaten,"
    },
    {
      "verse": "#",
      "text": " the destroying locust has eaten."
    },
    {
      "verse": "5",
      "text": "Awake, you drunkards, and weep,"
    },
