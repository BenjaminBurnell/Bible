    {
      "verse": "14",
      "text": " Consecrate a fast;"
    },
    {
      "verse": "#",
      "text": " call a solemn assembly."
    },
    {
      "verse": "#",
      "text": "Gather the elders"
    },
    {
      "verse": "#",
      "text": "and all the inhabitants of the land"
    },
    {
      "verse": "15",
      "text": "Alas for the day!"
    },
    {
      "verse": "#",
      "text": " For the day of the Lord is near,"
    },
    {
      "verse": "#",
      "text": "and as destruction from the Almighty it comes."
