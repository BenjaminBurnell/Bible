{
  "version": "ESV",
  "book": "PSA",
  "chapter": 130,
  "verses": [
    {
      "verse": "1",
      "text": "Out of the depths I cry to you, O Lord !"
    },
    {
      "verse": "2",
      "text": "O Lord, hear my voice!"
    },
    {
      "verse": "#",
      "text": " Let your ears be attentive"
    },
    {
      "verse": "#",
      "text": "to the voice of my pleas for mercy!"
    },
    {
      "verse": "3",
      "text": "If you, O Lord , should mark iniquities,"
    },
    {
      "verse": "#",
      "text": "O Lord, who could stand?"
    },
    {
      "verse": "4",
      "text": "But with you there is forgiveness,"
    },
    {
      "verse": "#",
      "text": " that you may be feared."
    },
    {
      "verse": "5",
      "text": "I wait for the Lord , my soul waits,"
    },
    {
      "verse": "#",
      "text": "and in his word I hope;"
    },
    {
      "verse": "6",
      "text": "my soul waits for the Lord"
    },
    {
      "verse": "#",
      "text": "more than watchmen for the morning,"
    },
    {
      "verse": "7",
      "text": "O Israel, hope in the Lord !"
    },
    {
      "verse": "#",
      "text": "For with the Lord there is steadfast love,"
    },
    {
      "verse": "8",
      "text": "And he will redeem Israel"
    }
  ]
}